<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:alpha="0.9"
            android:src="@mipmap/background_ratify"
            android:layout_height="match_parent" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="?attr/actionBarSize"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="16dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/nav_pp_new"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@mipmap/user_icon"
                            tools:src="@mipmap/da86c18c797e47cafd756cb3763cf85b" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_height="wrap_content">

                            <com.barlificent.ratify1.CustomClasses.FontTextView
                                android:id="@+id/nav_name_new"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="5dp"
                                android:text="..."
                                android:textColor="#fff"
                                android:textSize="20sp"
                                tools:text="Jenna Sue" />

                            <com.barlificent.ratify1.CustomClasses.FontTextView
                                android:id="@+id/nav_number_new"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="..."
                                android:textColor="#fff"
                                android:textSize="15sp"
                                tools:text="+555-6623" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="11dp"
                        android:id="@+id/profile_nav">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:tint="#fff"
                            android:padding="3dp"
                            android:src="@drawable/ic_account_circle_black_36dp" />

                        <com.barlificent.ratify1.CustomClasses.FontTextView
                            style="@style/TextView.GuillotineItem"
                            android:text="Profile" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="11dp"
                        android:id="@+id/settings_nav">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:tint="#fff"
                            android:padding="3dp"
                            android:src="@drawable/ic_settings_white_36dp" />

                        <com.barlificent.ratify1.CustomClasses.FontTextView
                            style="@style/TextView.GuillotineItem"
                            android:text="Settings" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="11dp"
                        android:id="@+id/fav_nav">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:tint="#fff"
                            android:padding="3dp"
                            android:src="@drawable/ic_favorite_white_24dp" />

                        <com.barlificent.ratify1.CustomClasses.FontTextView
                            style="@style/TextView.GuillotineItem"
                            android:text="Favorites" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="11dp"
                        android:id="@+id/share_nav">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:tint="#fff"
                            android:padding="3dp"
                            android:src="@drawable/ic_share_white_36dp" />

                        <com.barlificent.ratify1.CustomClasses.FontTextView
                            style="@style/TextView.GuillotineItem"
                            android:text="Share" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="11dp"
                        android:id="@+id/messages_nav"
                        >

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:tint="#fff"
                            android:padding="3dp"
                            android:src="@drawable/ic_chat_black_24dp" />

                        <com.barlificent.ratify1.CustomClasses.FontTextView
                            style="@style/TextView.GuillotineItem"
                            android:text="Messages" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="11dp"
                        android:id="@+id/leaderboard_nav">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:tint="#fff"
                            android:padding="3dp"
                            android:src="@mipmap/leaderboard" />

                        <com.barlificent.ratify1.CustomClasses.FontTextView
                            style="@style/TextView.GuillotineItem"
                            android:text="Leaderboard" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="11dp"
                        android:id="@+id/friends_nav">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:tint="#fff"
                            android:padding="3dp"
                            android:src="@drawable/ic_people_black_48dp" />

                        <com.barlificent.ratify1.CustomClasses.FontTextView
                            style="@style/TextView.GuillotineItem"
                            android:text="Friends" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="11dp"
                        android:id="@+id/upload_nav">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:tint="#fff"
                            android:padding="3dp"
                            android:src="@drawable/ic_camera_black_48dp" />

                        <com.barlificent.ratify1.CustomClasses.FontTextView
                            style="@style/TextView.GuillotineItem"
                            android:text="Upload" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="11dp"
                        android:id="@+id/about_group"
                        >

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:tint="#fff"
                            android:padding="3dp"
                            android:src="@drawable/ic_account_circle_black_36dp" />

                        <com.barlificent.ratify1.CustomClasses.FontTextView
                            style="@style/TextView.GuillotineItem"
                            android:text="About" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>


        </LinearLayout>
        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="0dp"
            app:theme="@style/actionBarStyle"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <ImageView
                android:id="@+id/guillotine_hamburger"
                android:rotation="90"
                style="@style/ImageView.Hamburger"
                android:src="@drawable/ic_menu_white_24dp" />


            <TextView
                android:id="@+id/toolbar_title_guil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/app_name"
                android:textColor="#00000000"
                android:textSize="24sp" />
            <ImageView
                android:id="@+id/closeButtonNav"
                android:layout_width="36dp"
                android:tint="#fff"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_close_white_24dp"
                android:layout_height="36dp" />

        </android.support.v7.widget.Toolbar>
    </RelativeLayout>

</LinearLayout>