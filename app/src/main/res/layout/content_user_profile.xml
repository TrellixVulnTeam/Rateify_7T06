<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.barlificent.ratify1.UserProfileActivity"
    tools:showIn="@layout/activity_user_profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/sfsa"
                android:background="@mipmap/background_ratify"
                android:gravity="center"
                android:elevation="5dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:paddingBottom="8dp"
                    android:src="@mipmap/user_icon" />

                <com.barlificent.ratify1.CustomClasses.FontTextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textColor="#fff"
                    android:textSize="24sp"
                    tools:text="Jenna Sue" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="-20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sfsa"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="2dp">

                                <com.barlificent.ratify1.CustomClasses.FontTextView
                                    android:id="@+id/profile_points"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="..."
                                    android:textColor="@color/colorAccent"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <com.barlificent.ratify1.CustomClasses.FontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Points"
                                    android:textColor="#a1000000"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="2dp">

                                <com.barlificent.ratify1.CustomClasses.FontTextView
                                    android:id="@+id/profile_uploads"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="..."
                                    android:textColor="@color/colorAccent"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <com.barlificent.ratify1.CustomClasses.FontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Uploads"
                                    android:textColor="#a1000000"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="2dp">

                                <com.barlificent.ratify1.CustomClasses.FontTextView
                                    android:id="@+id/profile_rank"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="..."
                                    android:textColor="@color/colorAccent"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <com.barlificent.ratify1.CustomClasses.FontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rank"
                                    android:textColor="#a1000000"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Bio"
                            android:textAllCaps="true"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/bio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="4"
                            android:paddingLeft="10dp"
                            tools:text="Lorem ipsum bojani borial senaiop. Where sophy gerito berneras." />

                            <mehdi.sakout.fancybuttons.FancyButton
                                android:id="@+id/phone_field"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="6dp"
                                android:padding="10dp"
                                fancy:fb_borderWidth="1dp"
                                fancy:fb_defaultColor="@color/colorPrimary"
                                fancy:fb_focusColor="@color/colorAccent"
                                fancy:fb_fontIconResource="&#xf095;"
                                fancy:fb_iconPosition="left"
                                fancy:fb_radius="50dp"
                                android:layout_marginTop="16dp"
                                fancy:fb_text="+251946759214"
                                android:layout_gravity="center"
                                fancy:fb_textColor="#FFFFFF" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:padding="16dp"
                    android:text="Uploads"
                    android:layout_height="wrap_content" />
                <ListView
                    android:id="@+id/profile_photos"
                    android:layout_width="match_parent"
                    tools:layout_height="200dp"
                    android:layout_height="wrap_content">

                </ListView>
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</LinearLayout>
